<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMaster.UI.Views.RegisterPage"
             Title="Inscription">
    <StackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Pseudo" Text="{Binding Pseudo}" />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Mot de passe" Text="{Binding Password}" IsPassword="True" />
        <Entry Placeholder="Confirmer le mot de passe" Text="{Binding ConfirmPassword}" IsPassword="True" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
        <Button Text="Creer compte" Command="{Binding CreateAccountCommand}" />
    </StackLayout>
</ContentPage>
